{
  "name": "my-site",
  "version": "1.0.0",
  "description": "My personal blog/site",
  "main": "index.js",
  "scripts": {
    "start": "npm run build",
    "build": "webpack -d  && xcopy \"src/index.html\" \"dist/\"  /F /Y && webpack-dev-server --content-base src/ --inline --watch &&  sass-watch src/scss dist/css",
    "build:prod": "webpack -p  && xcopy \"src/index.html\" \"dist/\" /F /Y",
    "build-task:scss-compile": "node-sass-chokidar --source-map true src/scss/ -o dist/css",
    "build-task:autoprefixer": "postcss dist/css/*.css --use autoprefixer -d dist/css",
    "sass:build": "npm-run-all -p build-task:*",
    "sass:watch": "chokidar src/scss/*.scss -c \"npm run sass:build\"",    
    "dev": "npm-run-all -p sass:*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sapta94/MySite.git"
  },
  "keywords": [
    "reactjs",
    "mysite"
  ],
  "author": "SaptaD",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sapta94/MySite/issues"
  },
  "homepage": "https://github.com/sapta94/MySite#readme",
  "dependencies": {
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.6",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "chokidar-cli": "^1.2.0",
    "node-sass-chokidar": "0.0.3",
    "npm-run-all": "^4.1.2",
    "postcss-cli": "^4.1.1",
    "webpack": "^2.2.0-rc.4",
    "webpack-dev-server": "^2.9.5"
  }
}
